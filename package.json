{
    "name": "address-balance",
    "version": "1.0.0",
    "description": "a web server that allows the user to request the balance of ethereum addresses",
    "main": "index.js",
    "scripts": {
        "build": "rimraf dist && tsc",
        "dev": "ts-node-dev --respawn --pretty --transpile-only src/index.ts",
        "test": "mocha -r ts-node/register tests/*.ts tests/*.*.*ts --require dotenv/config --exit",
        "start": "cross-env NODE_ENV=production node dist/src/index.js",
        "prestart": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/muathendirangu/address-balance.git"
    },
    "keywords": [
        "typescript",
        "nodejs",
        "web server",
        "adrresses",
        "ethereum",
        "balances"
    ],
    "author": "muathendirangu",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/muathendirangu/address-balance/issues"
    },
    "homepage": "https://github.com/muathendirangu/address-balance#readme",
    "dependencies": {
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.3.1",
        "ethers": "^6.8.0",
        "express": "^4.18.2",
        "helmet": "^7.0.0",
        "rimraf": "^5.0.5",
        "sqlite3": "^5.1.6",
        "uuid": "^9.0.1",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/chai": "^4.3.8",
        "@types/chai-http": "^4.2.0",
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.19",
        "@types/mocha": "^10.0.2",
        "@types/node": "^20.8.5",
        "@types/uuid": "^9.0.5",
        "chai": "^4.3.10",
        "chai-http": "^4.4.0",
        "mocha": "^10.2.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.2.2"
    }
}
